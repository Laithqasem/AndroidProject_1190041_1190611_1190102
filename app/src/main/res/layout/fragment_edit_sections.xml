<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditSections" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/instructortv"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="40dp"
                        android:text="Instructor Email"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:translationY="10dp" />

                    <EditText
                        android:id="@+id/instructor_email"
                        android:layout_width="333dp"
                        android:layout_height="53dp"
                        android:layout_marginHorizontal="40dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textColorHint="@color/mainColor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/maxtv"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="40dp"
                        android:text="Max Trainees"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:translationY="10dp" />

                    <EditText
                        android:id="@+id/max_trainees"
                        android:layout_width="329dp"
                        android:layout_height="53dp"
                        android:layout_marginHorizontal="40dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textColorHint="@color/mainColor" />

                </LinearLayout>

                <TextView
                    android:id="@+id/starttimetv"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="40dp"
                    android:text="Start Time"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:translationY="10dp" />

                <Button
                    android:id="@+id/start_time"
                    android:layout_width="329dp"
                    android:layout_height="57dp"
                    android:layout_marginHorizontal="40dp"
                    android:drawableEnd="@drawable/icons8_down_button_32"
                    android:drawablePadding="12dp"
                    android:padding="12dp" />

                <TextView
                    android:id="@+id/eendtimetv"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="40dp"
                    android:text="End Time"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:translationY="10dp" />

                <Button
                    android:id="@+id/end_time"
                    android:layout_width="329dp"
                    android:layout_height="57dp"
                    android:layout_marginHorizontal="40dp"
                    android:drawableEnd="@drawable/icons8_down_button_32"
                    android:drawablePadding="12dp"
                    android:padding="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/daystv"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="40dp"
                        android:text="Days"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:translationY="10dp" />

                    <TextView
                        android:id="@+id/days_list"
                        android:layout_width="329dp"
                        android:layout_height="53dp"
                        android:layout_marginHorizontal="40dp"
                        android:drawableEnd="@drawable/icons8_down_button_32"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textColorHint="@color/mainColor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/roomtv"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="40dp"
                        android:text="Room"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:translationY="10dp" />

                    <TextView
                        android:id="@+id/room_list"
                        android:layout_width="329dp"
                        android:layout_height="53dp"
                        android:layout_marginHorizontal="40dp"
                        android:drawableEnd="@drawable/icons8_down_button_32"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textColorHint="@color/mainColor" />

                </LinearLayout>

                <Button
                    android:id="@+id/edit"
                    android:layout_width="329dp"

                    android:layout_height="70dp"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="40dp"
                    android:text="Edit Section"
                    android:textColor="@color/mainColor"
                    android:textSize="22sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
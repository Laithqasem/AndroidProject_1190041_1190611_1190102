<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical">

    <!-- Content area -->

    <!-- Navigation bar -->
<FrameLayout
android:id="@+id/content_frame"
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="1"
android:background="#FFFFFF"> <!-- White background -->

<androidx.fragment.app.FragmentContainerView
    android:id="@+id/FirstFragment"
    android:name="com.example.finalproject.Trainee_Search_Fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

<androidx.fragment.app.FragmentContainerView
    android:id="@+id/ProfileFragment"
    android:name="com.example.finalproject.Trainee_Profile_Fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
</FrameLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">

<!-- Home button -->
<Button
    android:id="@+id/btnHome"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:drawableEnd="@drawable/icons8_home_40"
    android:gravity="center"
    android:drawablePadding="8dp"
    android:background="#4285F4"
    android:textColor="#FFFFFF" /> <!-- White text color -->

<!-- Search button -->
<Button
    android:id="@+id/btnSearch"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="Search"
    android:background="#4285F4"
android:textColor="#FFFFFF" />

<!-- Profile button -->
<Button
    android:id="@+id/btnProfile"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="Profile"
    android:background="#4285F4"
    android:textColor="#FFFFFF" /> <!-- White text color -->

<!-- Notifications button -->
<Button
    android:id="@+id/btnNotifications"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:text="Notifications"
    android:background="#4285F4"
android:textColor="#FFFFFF" /> <!-- White text color -->

<!-- Courses button -->
<Button
    android:id="@+id/btnCourses"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:text="Courses"
    android:background="#4285F4"
android:textColor="#FFFFFF" /> <!-- White text color -->
</LinearLayout>
    </LinearLayout>

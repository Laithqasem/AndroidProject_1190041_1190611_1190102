                android:id="@+id/txtCourseNameHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Course Name"
                android:textStyle="bold"
                android:textColor="#000000"
                android:padding="8dp" />
        </TableRow>

